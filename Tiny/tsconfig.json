{
  "compilerOptions": {                             
    "target": "es6",
    "module": "amd",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "declaration": true,
    "noImplicitAny": true,                                                           
    "esModuleInterop": true,                           
    "moduleResolution": "node",
    "lib": ["ES6", "ES5", "DOM"],                                    
    "types": ["reflect-metadata"],
    "emitDecoratorMetadata": true,                              
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,            
  }
}
