{
  "compilerOptions": {
    "strict": true,                                      
    "allowJs": true,                                   
    "target": "es5",                                                                   
    "module": "es6",                                     
    "sourceMap": true,                                   
    "skipLibCheck": true,
    "esModuleInterop": true,                             
    "moduleResolution": "node",                          
    "experimentalDecorators": true,                               
    "forceConsistentCasingInFileNames": true,       
  }
}
